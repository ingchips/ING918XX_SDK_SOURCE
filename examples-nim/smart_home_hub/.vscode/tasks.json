{
  "type": "shell",

  "options": {
    "env": {"Path": "${env:Path};C:\projects\nim-1.0.0\bin;C:/projects/ingWizard"},
    "cwd": "${workspaceFolder}"
  },

  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "make",
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": [ "$gcc" ]
    },
    {
      "label": "clean",
      "command": "make clean",
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "rebuild",
      "command": "make rebuild",
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": [ "$gcc" ]
    },
    {
      "label": "download",
      "type": "process",
      "command": "C:/projects/ingWizard/../downloader/icsdw.exe",
      "args": ["${workspaceFolder}/flash_download.ini"],
      "problemMatcher": []
    }
  ],
  "version": "2.0.0"
}

